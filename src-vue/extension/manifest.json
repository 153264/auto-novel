{
  "manifest_version": 2,
  "version": "1.0.6",
  "name": "轻小说机翻机器人",
  "description": "解除浏览器跨域限制，以启用网页端的机翻功能",
  "permissions": [
    "<all_urls>",
    "debugger",
    "webRequest",
    "webRequestBlocking",
    "declarativeNetRequest",
    "cookies",
    "contextMenus"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "x-frame",
        "enabled": true,
        "path": "rulesets/x-frame.json"
      },
      {
        "id": "overwrite-origin",
        "enabled": false,
        "path": "rulesets/overwrite-origin.json"
      },
      {
        "id": "allow-credentials",
        "enabled": true,
        "path": "rulesets/allow-credentials.json"
      },
      {
        "id": "allow-headers",
        "enabled": false,
        "path": "rulesets/allow-headers.json"
      },
      {
        "id": "csp",
        "enabled": false,
        "path": "rulesets/csp.json"
      }
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "homepage_url": "https://books.fishhawk.top/",
  "browser_action": {},
  "background": {
    "scripts": [
      "worker.js"
    ]
  }
}